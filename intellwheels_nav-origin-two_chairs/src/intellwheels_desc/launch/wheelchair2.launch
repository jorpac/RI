<launch>
	<!-- arguments -->
	<arg name="pkg" value="$(find intellwheels_desc)"/>

	<!-- parameters -->
	<param name="robot_description" command="xacro '$(arg pkg)/urdf/wheelchair2.urdf.xacro'"/>

	<group ns="robot2">
    	<param name="tf_prefix" value="robot2_tf" />
		<node name="spawner2" pkg="gazebo_ros" type="spawn_model" args="-param robot_description2 -urdf -model wheelchair2 -x 2 -y 2"/>

		<!-- tf publisher -->
		<node name="r2_joint_pub" pkg="joint_state_publisher" type="joint_state_publisher"/>
		<node name="r2_robot_pub" pkg="robot_state_publisher" type="robot_state_publisher"/>
	</group>
</launch>
